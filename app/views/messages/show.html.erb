<%= link_to 'Back to messages', 'list' %>
<h1><%= @message[:title] %></h1>

<%= render :partial=>'shared/errors' %>

<div>
<p><%= @message[:body] %></p>
<% user = @users.select{|s| s[:id] == @message[:user_id]}.first; %>
<p>Posted by <%= user[:first_name] %> <%= user[:last_name] %></p>
<%= form_tag("/messages/reply") do %>
	<%= hidden_field_tag "message[reply_to_message_id]", @message[:id] %>
	<%= label_tag "message[body]", "Post a reply:" %>
	<%= text_field_tag "message[body]" %>
	<%= submit_tag "Reply" %>
<%end%>
<%= render :partial=>'reply', :locals=>{:parent_message_id=>@message[:id]} %>
</div>